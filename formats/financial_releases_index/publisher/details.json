{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
   "required": [
     "title",
     "image",
     "press_releases"
   ],
  "properties": {
     "title": {
       "type": "string"
     },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "alt_text": {
          "type": "string"
        }
      }
    },
    "press_releases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "base_path",
          "content",
          "published_date"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "base_path": {
            "$ref": "#/definitions/absolute_path"
          },
          "content": {
            "type": "string"
          },
          "published_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
