{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
   "required": [
     "title",
     "image"
   ],
  "properties": {
     "title": {
       "type": "string"
     },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "alt_text": {
          "type": "string"
        }
      }
    }
  }
}
