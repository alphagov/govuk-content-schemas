{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "format",
    "publishing_app",
    "update_type",
    "redirects"
  ],
  "properties": {
    "base_path": {
      "$ref": "#/definitions/absolute_path"
    },
    "format": {
      "enum": [ "redirect" ]
    },
    "publishing_app": {
      "type": "string"
    },
    "update_type": {
      "enum": [ "major", "minor", "republish" ]
    },
    "redirects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path",
          "type",
          "destination"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "enum": [ "prefix", "exact" ]
          },
          "destination": {
            "type": "string"
          }
        }
      }
    }
  }
}
