      "type": "string",
      "enum": [
        "calculators",
        "calendars",
        "collections",
        "datagovuk-find",
        "email-alert-frontend",
        "email-campaign-frontend",
        "feedback",
        "finder-frontend",
        "frontend",
        "government-frontend",
        "info-frontend",
        "licencefinder",
        "manuals-frontend",
        "performanceplatform-big-screen-view",
